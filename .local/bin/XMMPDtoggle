mpc toggle
ST=`mpc | tail -2 | grep "\[*\]" | cut -d \  -f 1 | sed -e 's/[^a-z]//g'`
case $ST in
    playing  ) echo "<fn=3></fn>" > /tmp/haron/PS  ;;
    paused   ) echo "<fn=3></fn>" > /tmp/haron/PS  ;;
    *        ) echo "<fn=3></fn>" > /tmp/haron/PS  ;;
esac
exit 0
