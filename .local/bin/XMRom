ROM1=`df -h | grep -w / | tr -s \  | cut -d \  -f 5 | cut -c 1-3 | sed -e 's/[%]//'`
OUT1=`
    if [ $ROM1 -ge 90 ]; then 
        echo '<fc=#ffab00>'$ROM1'%</fc>'
    elif [ $ROM1 -ge 75 ]; then 
        echo '<fc=#ffab00>'$ROM1'%</fc>'
    elif [ $ROM1 -ge 60 ]; then 
        echo '<fc=#ffff00>'$ROM1'%</fc>'
    else 
        echo ''$ROM1'%'
    fi
`
ROM2=`df -h | grep Data | tr -s \  | cut -d \  -f 5 | cut -c 1-3 | sed -e 's/[%]//'`
OUT2=`
    if [ $ROM2 -ge 90 ]; then 
        echo '<fc=#ff6500>'$ROM2'%</fc>'
    elif [ $ROM2 -ge 75 ]; then 
        echo '<fc=#ffab00>'$ROM2'%</fc>'
    elif [ $ROM1 -ge 60 ]; then 
        echo '<fc=#ffff00>'$ROM2'%</fc>'
    else 
        echo $ROM2'%'
    fi
`
ROM3=`df -h | grep 320G | tr -s \  | cut -d \  -f 5 | cut -c 1-3 | sed -e 's/[%]//'`
OUT3=`
    if [ $ROM3 -ge 90 ]; then 
        echo '<fc=#ff6500>'$ROM3'%</fc>'
    elif [ $ROM3 -ge 75 ]; then 
        echo '<fc=#ffab00>'$ROM3'%</fc>'
    elif [ $ROM1 -ge 60 ]; then 
        echo '<fc=#ffff00>'$ROM3'%</fc>'
    else 
        echo $ROM3'%'
    fi
`
ROM4=`df -h | grep BKP | tr -s \  | cut -d \  -f 5 | cut -c 1-3 | sed -e 's/[%]//'`
OUT4=`
    if [ $ROM4 -ge 90 ]; then 
        echo '<fc=#ff6500>'$ROM4'%</fc>'
    elif [ $ROM4 -ge 75 ]; then 
        echo '<fc=#ffab00>'$ROM4'%</fc>'
    elif [ $ROM1 -ge 60 ]; then 
        echo '<fc=#ffff00>'$ROM4'%</fc>'
    else 
        echo $ROM4'%'
    fi
`
echo $OUT1 $OUT2 $OUT3 $OUT4
exit 0
