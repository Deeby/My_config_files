#!/usr/bin/env zsh
# Author - Haron Prime
# License © 2017 WTFPL http://www.wtfpl.net/

while true; do
    DATA=`date "+%d.%m.%Y"`
    DAY=`date "+%A"`
    TZ=`date "+%Z UTC%:::z"`
    case $DAY in
        Суббота     ) echo "<fc=#ffab00> $DAY</fc>  <fn=1><fc=#ccc>$DATA $TZ</fc></fn>" > /tmp/haron/DO ;;
        Воскресенье ) echo "<fc=#ff6500> $DAY</fc>  <fn=1><fc=#ccc>$DATA $TZ</fc></fn>" > /tmp/haron/DO ;;
        *           ) echo "<fc=#959595> $DAY</fc>  <fn=1><fc=#ccc>$DATA $TZ</fc></fn>" > /tmp/haron/DO ;;
    esac
    sleep 60
done
