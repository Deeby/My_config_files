while true; do
    # MYUP=`uptime | cut -d , -f 1 | awk '{print $3 $4}'`
    MYUP=`uptime`
    echo '<action=`XMHtop` button=1><action=`XMinxi` button=3><fn=2> </fn><fc=#9df>'$MYUP'</fc></action></action>' > /tmp/haron/UT
    sleep 60
done
