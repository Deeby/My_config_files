#!/usr/bin/env zsh
# Author - Haron Prime
# License Â© 2017 WTFPL http://www.wtfpl.net/

MW1=/tmp/$USER/MW1
MW2=/tmp/$USER/MW2
F1=`cat $MW1`
F2=$(( $F1 + 1 ))
if [[ $F2 -eq 1 ]]; then 
    W="window"
else W="windows"
fi
echo $(( $F1 + 1 )) > $MW1 
echo '<fc=#e50><fn=1>'$F2 $W'</fn></fc>' > $MW2
exit 0
