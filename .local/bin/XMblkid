if (pidof dunst >/dev/null); then 
    kill $(pidof dunst)
else 
    kill $(pidof dunst) &
    blkid | column -t | xargs -0 notify-send -i "/home/haron/.icons/nouveGnomeGray/24x24/devices/drive-harddisk.png" -t 0
fi
exit 0
