ROM1=`df -h | grep -w / | tr -s \  | cut -d \  -f 5 | cut -c 1-3 | sed -e 's/[%]//'`
if [ $ROM1 -gt 84 ]; then 
    echo '<fc=#95d5f5>ROM:</fc><fn=2> </fn><fc=#ff6500>'$ROM1'%</fc>'
elif [ $ROM1 -gt 59 ]; then 
    echo '<fc=#95d5f5>ROM:</fc><fn=2> </fn><fc=#ffff00>'$ROM1'%</fc>'
else 
    echo '<fc=#95d5f5>ROM:</fc><fn=2> </fn>'$ROM1'%'
fi
exit 0
