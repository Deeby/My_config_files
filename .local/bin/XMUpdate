STATUS=`ping -c 3 8.8.8.8 | tail -2 | head -1 | awk '{print $4}'`
if [[ $STATUS -gt 0 ]]; then
    UPD=`checkupdates | wc -l`
    if [[ $UPD -gt 0 ]]; then 
        if [[ $UPD -eq 1 ]]; then
            PKG="package"
        elif [[ $UPG -gt 1 ]]; then
            PKG="packages"
        fi
        echo "<fc=#ffab00> "$UPD"<fn=2> </fn>"$PKG" can be updated</fc>" > /tmp/haron/UP
    else 
        echo > /tmp/haron/UP
    fi
else
    echo "<fc=#e50></fc>" > /tmp/haron/UP
fi
exit 0
