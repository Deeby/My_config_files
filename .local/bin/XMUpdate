UPD=`checkupdates | wc -l`
if [ $UPD -gt 0 ]; then 
    echo '<fn=3><fc=#e50>  </fc></fn> <fc=#cccccc>Update:</fc><fn=2> </fn><fnfc=#e50>'$UPD'<fn=2> </fn>pkg</fc></fn>' > /tmp/haron/UP
else 
    echo > /tmp/haron/UP
fi
exit 0
