#!/usr/bin/env zsh
# Author - Haron Prime
# License Â© 2017 WTFPL http://www.wtfpl.net/
# Recompile and restart xmonad

killall xmobar &
killall gis-weather &
killall sleep &
kill $(ps aux | grep XMMPD     | grep -v grep | awk '{print $2}') &
kill $(ps aux | grep XMNetTest | grep -v grep | awk '{print $2}') &
kill $(ps aux | grep XMTrans   | grep -v grep | awk '{print $2}') &
XMStateKill &
echo > /tmp/haron/UP &
echo > /tmp/haron/CT &
echo > /tmp/haron/WI &
xmonad --restart
exit 0
