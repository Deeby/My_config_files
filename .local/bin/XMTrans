while true; do
    if (pgrep transmission >/dev/null); then 
        echo  "<fc=#0e0></fc>" > /tmp/haron/TU
        exit 0
    else
        echo  "<fc=#e50></fc>" > /tmp/haron/TU
    fi
    sleep 5
done
exit 0
