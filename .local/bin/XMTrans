while true; do
    if (pgrep transmission >/dev/null); then 
        echo  "<fn=3><fc=#0e0></fc></fn>" > /tmp/haron/TU
        exit 0
    else
        echo  "<fn=3><fc=#e50></fc></fn>" > /tmp/haron/TU
    fi
    sleep 5
done
exit 0
