echo  "" > /tmp/haron/TU
sleep 5 &&
while true; do
    if [[ -n $(pgrep transmission) ]]; then 
        echo  "<fc=#0e0></fc>" > /tmp/haron/TU
        sleep 30
    else
        echo  "<fc=#e50></fc>" > /tmp/haron/TU
        sleep 5
    fi
done
