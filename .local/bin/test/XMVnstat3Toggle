PID1=`ps aux | grep XMVnstat3 | grep -v XMVnstat3Toggle | grep -v grep | awk '{print $2}'`
PID2=`ps aux | grep dunst                               | grep -v grep | awk '{print $2}'`
if [[ -n $PID1 ]]; then
    if [[ -n $PID2 ]]; then
        kill $PID2 &
    fi
    kill $PID1 &
    exit 0
else
    if [[ -n $PID2 ]]; then
        kill $PID2
    fi
    XMVnstat3 &
fi
exit 0
