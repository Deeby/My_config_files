while true; do
    echo "<fc=#5f5>  </fc>" > /tmp/haron/battery
    sleep 1 &&
    echo "<fc=#5f5>  </fc>" > /tmp/haron/battery
    sleep 1 &&
    echo "<fc=#5f5>  </fc>" > /tmp/haron/battery
    sleep 1 &&
    echo "<fc=#5f5>  </fc>" > /tmp/haron/battery
    sleep 1 &&
    echo "<fc=#5f5>  </fc>" > /tmp/haron/battery
    sleep 1 &&
done
