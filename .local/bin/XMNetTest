echo  "" > /tmp/haron/NT
while true; do
    STATUS=`ping -c 3 8.8.8.8 | sed -n 7p | awk '{print $4}'`
    if [ $STATUS -eq 0 ]; then
        echo  "<fc=#e50></fc>" > /tmp/haron/NT
    else
        echo  "<fc=#0e0></fc>" > /tmp/haron/NT
    fi
    sleep 30
done
