STATE=`cat /tmp/haron/STATE8`
if [ $STATE -eq 0 ]; then
    XMVolNew &
    echo "1" > /tmp/haron/STATE8
    exit 0
else
    kill $(ps axu | grep XMVolNew | head -1 | awk '{print $2}')
    echo > /tmp/haron/VO
    echo "0" > /tmp/haron/STATE8
    exit 0
fi
