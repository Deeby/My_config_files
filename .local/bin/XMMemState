#!/usr/bin/env zsh
# Author - Haron Prime
# License Â© 2017 WTFPL http://www.wtfpl.net/

PID1=`ps aux | grep XMMemAll | grep -v grep | awk '{print $2}'`
PID2=`ps aux | grep XMRomNew | grep -v grep | awk '{print $2}'`
if [[ $PID1 -gt 0 ]]|[[ $PID2 -gt 0 ]]; then
    kill $PID1
    kill $PID2
    echo > /tmp/haron/MEM
    echo > /tmp/haron/RU
    exit 0
else
    XMMemAll &
    XMRomNew &
    exit 0
fi
