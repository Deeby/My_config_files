mpc toggle
ST=`mpc | sed -n 2p | awk '{print $1}' | sed -e 's/[^a-z]//g'`
case $ST in
    playing  ) echo "" > /tmp/haron/PS  ;;
    paused   ) echo "" > /tmp/haron/PS  ;;
    *        ) echo "" > /tmp/haron/PS  ;;
esac
exit 0
