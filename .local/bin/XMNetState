STATE=`cat /tmp/haron/STATE2`
if [ $STATE -eq 0 ]; then
    XMNetSpeed &
    echo "1" > /tmp/haron/STATE2
    exit 0
else
    kill $(ps axu | grep XMNetSpeed | head -1 | awk '{print $2}')
    echo > /tmp/haron/NS
    echo "0" > /tmp/haron/STATE2
    exit 0
fi
