ST=`cat $HOME/.config/mpd/state | grep state | tail -1 | cut -d \  -f 2`
case $ST in
    play  ) echo "<fc=#00ff00><fn=3></fn></fc>" ;;
    pause ) echo "<fc=#ffff00><fn=3></fn></fc>" ;;
    stop  ) echo "<fc=#ff6500><fn=3></fn></fc>" ;;
esac
exit 0
